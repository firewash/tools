    <div class="panel panel-default">
        <div class="panel-heading">
            列表页面
        </div>

        <table id="capture_table" class="table">
            <thead>
                <tr>
                    <th>URL</th>
                    <th>捕获时间</th>
                    <th>所属任务</th>
                    <th>所属人</th>
                    <th>操作</th>
