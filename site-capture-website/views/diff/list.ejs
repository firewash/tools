<script>
    var detail_url = "/diff/detail",
        capture_list_url = "/api/capture/list",
            defaultStartIndex = 0,
            defaultCountPerPage = 5,
            pageInfo = {
                totolCount:0,
                currentStartIndex:0,
                countPerPage:5
            };

    function bindPagination(){
        new Vue({
            el:"#pagination",
            data:pageInfo,
            computed:{
                pageCount:function(){ //有多少页
                    return Math.ceil(this.totolCount/this.countPerPage);
                },
                currentPageIndex:function(){ //当前是第几页
                    return Math.ceil((this.currentStartIndex)/this.countPerPage);
                }
            },
            methods:{
                click:function(e){
                    var value = e.currentTarget.getAttribute("value");
                    //alert(e);
                    loadCaptureListData({
                        hazy: $("#hazyurl").val(),
                        begin: pageInfo.countPerPage * value,
                        count: pageInfo.countPerPage
                    });
                },
                pre:function(){
                    var willStartIndex = pageInfo.currentStartIndex - pageInfo.countPerPage;
                    willStartIndex = willStartIndex<0?0:willStartIndex;
                    loadCaptureListData({
                        hazy: $("#hazyurl").val(),
                        begin: willStartIndex,
                        count: pageInfo.countPerPage
                    });
                }
            }
        })
    }

    function renderList(arr) {
        var list = $("#capture_list");
        list.html("");
        arr.forEach(function (item) {
            var timestamp_start_capture = item.timestamp_start_capture?(new Date(item.timestamp_start_capture)).toLocaleString():"",
                    timestamp_capture_complete = item.timestamp_capture_complete?(new Date(item.timestamp_capture_complete)).toLocaleString():"";;
            let html = `<tr>
                            <td>${item.url}</td>
                            <td>${timestamp_start_capture}</td>
                            <td>${timestamp_capture_complete}</td>
                            <td>${item.taskid}</td>
                            <td>null</td>
                            <td><a href="${detail_url}?_id=${item._id}" target="_blank">查看详情</a></td>
                        </tr>`
            list.append(html);
        })
    }

    function loadCaptureListData(condition){
        $.post(capture_list_url, condition, function(result){
            console.log(result);
            if(result.err){
                alert("something error. look console.");
            }else{
                renderList(result.data);
                pageInfo.currentStartIndex = result.begin;
                pageInfo.totolCount = result.totalCount;
            }
        });
    }

